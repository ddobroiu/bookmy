generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  OWNER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  role      Role     @default(CUSTOMER)
  password  String? 
  avatar    String? 
  phone     String?
  bio       String?
  salons    Salon[]  @relation("OwnerSalons")
  accounts  Account[]
  sessions  Session[]
  createdAt DateTime @default(now())
}

model Salon {
  id         String    @id @default(cuid())
  name       String
  slug       String    @unique
  subdomain  String?   @unique
  description String?
  phone      String?
  address    String?
  images     Json?
  socialLinks Json?
  openingHours Json?
  ownerId    String?
  owner      User?     @relation("OwnerSalons", fields: [ownerId], references: [id])
  services   Service[]
  bookings   Booking[]
  createdAt  DateTime  @default(now())
}

model Service {
  id        String   @id @default(cuid())
  salonId   String
  salon     Salon    @relation(fields: [salonId], references: [id])
  name      String
  duration  Int      @default(30) // minutes
  price     Float    @default(0)
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Booking {
  id           String   @id @default(cuid())
  salonId      String
  salon        Salon    @relation(fields: [salonId], references: [id])
  serviceId    String
  service      Service  @relation(fields: [serviceId], references: [id])
  customerName String
  customerPhone String
  start        DateTime
  status       String   @default("PENDING")
  createdAt    DateTime @default(now())
}

// Models required by next-auth Prisma adapter
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
