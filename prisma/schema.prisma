// 1. Modelul Utilizator (Client și Partener)
model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String?
  phoneNumber  String?
  passwordHash String
  role         Role      @default(CLIENT)
  salonId      String?
  salonSetup   Boolean   @default(false)
  
  // ADĂUGAT AICI:
  avatarUrl    String?   @db.Text // Folosim @db.Text pentru a permite șiruri Base64 lungi

  appointments Appointment[]
  reviews      Review[]

  @@map("users")
}

