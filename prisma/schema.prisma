datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CLIENT
  PARTNER
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  phoneNumber  String?
  passwordHash String
  role         Role      @default(CLIENT)
  salonId      String?
  salonSetup   Boolean  @default(false)
  avatarUrl    String?

  appointments Appointment[]
  reviews      Review[]
  salons       Salon[]

  @@map("users")
}

model Salon {
  id        String   @id @default(uuid())
  name      String
  users     User[]
}

model Appointment {
  id        String   @id @default(uuid())
  date      DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Review {
  id        String   @id @default(uuid())
  content   String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
